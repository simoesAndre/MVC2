@model Paciente

<h4 style="font-weight: 400;">Pr√©-Agendamento</h4>
<form method="POST">
    <div class="row">
        <div class="col-6">
            <form>
                <div class="row" style="padding-top: 10px; padding bottom: 10px">
                    <div class="col-2">
                        <label asp-for="Nome">Nome:</label>
                    </div>
                    <div class="col-10">
                        <input asp-for="Nome" style="width: 220px;"/>
                    </div>
                </div>
                <div class="row" style="padding-top: 10px; padding bottom: 10px">
                    <div class="col-2">
                        <label asp-for="Telefone">Telefone:</label>
                    </div>
                    <div class="col-10">
                        <input asp-for="Telefone" style="width: 220px;"/>
                    </div>
                </div>
                <div class="row" style="padding-top: 10px; padding bottom: 10px">
                    <div class="col-2">
                        <label asp-for="Data">Data:</label>
                    </div>
                    <div class="col-10">
                        <input asp-for="Data" style="width: 220px;"/>
                    </div>
                </div>
                <div class="row" style="padding-top: 10px; padding bottom: 10px">
                    <div class="col-2">
                        <label asp-for="Animal">Animal:</label>
                    </div>
                    <div class="col-10">
                        <select asp-for="Animal" style="width: 170px;">
                            <option value="Cachorro">Cachorro</option>
                            <option value="Gato">Gato</option>
                            <option value="Boi">Boi</option>
                            <option value="Porco">Porco</option>
                            <option value="Cavalo">Cavalo</option>
                            <option value="Lagarto">Lagarto</option>
                            <option value="Tartaruga">Tartaruga</option>
                            <option value="Coelho">Coelho</option>
                            <option value="Hamister">Hamister</option>
                        </select>
                    </div>
                </div>
                <div class="row" style="padding-top: 10px; padding bottom: 10px">
                    <div class="col-2">
                        <label asp-for="Necessidade">Necessidade:</label>
                    </div>
                    <div class="col-10">
                        <input asp-for="Necessidade" style="height: 66px; width: 220px;"/>
                    </div>
                </div>
                <div class="row" style="padding-top: 10px; padding bottom: 10px">
                    <div class="col-2"></div>
                    <div class="col-5">
                        <input type="submit" value="Enviar" style="width: 90px;"/>
                    </div>
                </div>
            </form>
        </div>
    </div>
</form>